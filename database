CREATE TABLE Address
(
    id BIGINT PRIMARY KEY NOT NULL,
    city VARCHAR(255) NOT NULL,
    country VARCHAR(255) NOT NULL,
    state VARCHAR(255) NOT NULL,
    street VARCHAR(255) NOT NULL,
    zipCode VARCHAR(255) NOT NULL
);
CREATE TABLE CustomerOrder
(
    id BIGINT PRIMARY KEY NOT NULL,
    dispatched DATETIME,
    orderState VARCHAR(20) NOT NULL,
    placed DATETIME,
    CUSTOMER_ID BIGINT
);
CREATE TABLE OPENJPA_SEQUENCE_TABLE
(
    ID TINYINT PRIMARY KEY NOT NULL,
    SEQUENCE_VALUE BIGINT
);
CREATE TABLE OrderLines
(
    ORDER_ID BIGINT,
    KEY0 VARCHAR(255),
    quantity INT NOT NULL,
    unitPrice DOUBLE NOT NULL,
    PRODUCT_CODE VARCHAR(255)
);
CREATE TABLE Product
(
    code VARCHAR(255) PRIMARY KEY NOT NULL,
    description VARCHAR(255) NOT NULL,
    inStock INT NOT NULL,
    name VARCHAR(255) NOT NULL,
    price DOUBLE NOT NULL
);
CREATE TABLE Provider
(
    id BIGINT PRIMARY KEY NOT NULL,
    email VARCHAR(255) NOT NULL,
    pIVA VARCHAR(255) NOT NULL,
    phone VARCHAR(255) NOT NULL,
    ADDRESS_ID BIGINT
);
CREATE TABLE Provider_Product
(
    PROVIDER_ID BIGINT,
    PRODUCTS_CODE VARCHAR(255)
);
CREATE TABLE SystemUser
(
    id BIGINT PRIMARY KEY NOT NULL,
    dateOfBirth DATE NOT NULL,
    email VARCHAR(255) NOT NULL,
    firstName VARCHAR(255) NOT NULL,
    lastName VARCHAR(255) NOT NULL,
    password VARCHAR(255) NOT NULL,
    phoneNumber VARCHAR(255) NOT NULL,
    registrationDate DATE NOT NULL,
    userGroup VARCHAR(20) NOT NULL,
    username VARCHAR(255) NOT NULL,
    ADDRESS_ID BIGINT
);
CREATE INDEX I_CSTMRDR_CUSTOMER ON CustomerOrder (CUSTOMER_ID);
CREATE INDEX I_ORDRLNS_ORDER_ID ON OrderLines (ORDER_ID);
CREATE INDEX I_ORDRLNS_PRODUCT ON OrderLines (PRODUCT_CODE);
CREATE INDEX I_PROVIDR_ADDRESS ON Provider (ADDRESS_ID);
CREATE INDEX I_PRVDDCT_ELEMENT ON Provider_Product (PRODUCTS_CODE);
CREATE INDEX I_PRVDDCT_PROVIDER_ID ON Provider_Product (PROVIDER_ID);
CREATE INDEX I_SYSTMSR_ADDRESS ON SystemUser (ADDRESS_ID);
CREATE INDEX I_SYSTMSR_DTYPE ON SystemUser (userGroup);
